<Window x:Class="WaveBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveBrowser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border x:Name="WaveBorder" IsManipulationEnabled="True" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Image x:Name="WaveImage" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="Fill"/>
        </Border>
        <Button x:Name="LoadBtn" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="LoadBtn_Click"/>
        <TextBlock x:Name="FpsBox" HorizontalAlignment="Right" TextWrapping="NoWrap" Text="Fps" VerticalAlignment="Top" Background="White"/>
    </Grid>
</Window>
